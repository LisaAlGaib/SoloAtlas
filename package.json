{
  "name": "@soloatlas/monorepo",
  "version": "0.1.0",
  "description": "A scalable, production-ready monorepo for solo travel planning web application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "cd apps/api && npm run start",
    "start:web": "cd apps/web && npm run start",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "type-check": "npm run type-check:api && npm run type-check:web",
    "type-check:api": "cd apps/api && npm run type-check",
    "type-check:web": "cd apps/web && npm run type-check",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:seed": "cd apps/api && npm run db:seed",
    "db:studio": "cd apps/api && npm run db:studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LisaAlGaib/SoloAtlas.git"
  },
  "keywords": [
    "travel",
    "solo-travel",
    "planning",
    "nextjs",
    "react",
    "typescript",
    "monorepo",
    "nodejs",
    "postgresql",
    "prisma"
  ],
  "author": "SoloAtlas Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LisaAlGaib/SoloAtlas/issues"
  },
  "homepage": "https://github.com/LisaAlGaib/SoloAtlas#readme"
}
