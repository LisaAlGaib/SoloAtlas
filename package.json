{
  "name": "@soloatlas/monorepo",
  "version": "0.1.0",
  "description": "A scalable, production-ready monorepo for solo travel planning web application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r --parallel test:watch",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,css,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd apps/api && pnpm db:migrate",
    "db:seed": "cd apps/api && pnpm db:seed",
    "db:studio": "cd apps/api && pnpm db:studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LisaAlGaib/SoloAtlas.git"
  },
  "keywords": [
    "travel",
    "solo-travel",
    "planning",
    "nextjs",
    "react",
    "typescript",
    "monorepo",
    "nodejs",
    "postgresql",
    "prisma"
  ],
  "author": "SoloAtlas Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LisaAlGaib/SoloAtlas/issues"
  },
  "homepage": "https://github.com/LisaAlGaib/SoloAtlas#readme"
}
